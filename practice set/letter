#Method 2
name = input("Enter the name\n")
date = input("Enter the date\n")

letter = '''Dear <|NAME|>
Greetings from ABC Company
You are selected!!
Date : <|DATE|>'''

letter = letter.replace("<|NAME|>", name)
letter= letter.replace("<|DATE|>", date)

print(letter)
